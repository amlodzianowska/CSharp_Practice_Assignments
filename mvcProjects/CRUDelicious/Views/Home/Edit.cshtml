@model Dish;

<form action="/updateDish/@Model.DishId" method="post">
        <div class="form-group">
            <label for="Name">Dish Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Chef">Chef's Name</label>
            <input asp-for="Chef" class="form-control">
            <span asp-validation-for="Chef" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                @{
                    for (int i = 1; i<=5;i++)
                    {
                        <option value="@i">@i</option>
                    }
                }
            </select>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Calories">Calories</label>
            <input asp-for="Calories" class="form-control">
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description: </label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <input type="submit" value="Edit Dish" class="btn btn-primary">
    </form>