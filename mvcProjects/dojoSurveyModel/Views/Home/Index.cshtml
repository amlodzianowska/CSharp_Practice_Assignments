@{
    ViewData["Title"] = "Home Page";
}
@model User
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form class = "form" action="process" method="post">
            <div class="mb-3">
                <label class="form-label" for="userName">Your Name</label>
                <input class="form-control" asp-for="userName">
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Dojo Location:</label>
                <select class="form-select" asp-for="location">
                    <option hidden selected disabled>Select Location</option>
                    <option value="San Jose">San Jose</option>
                    <option value="Chicago">Chicago</option>
                    <option value="Miami">Miami</option>
                </select>
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="language">Favorite Language:</label>
                <select class="form-select" asp-for="language">
                    <option hidden selected disabled>Select Language</option>
                    <option value="C#">C#</option>
                    <option value="Python">Python</option>
                    <option value="Java">Java</option>
                </select>
                <span asp-validation-for="language" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="comment">Comment (optional): </label>
                <textarea asp-for="comment" class="form-control"></textarea>
                <span asp-validation-for="comment" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Submit">
            </div>
        </form>
</div>
