@model DojoActivity
<h1>Create an Activity</h1>

<div class="container">
    <form action="/addActivity" method="post">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="Title">Title:</label>
                    <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="ActivityDate">Date:</label>
                    <input asp-for="ActivityDate" class="form-control">
                    <span asp-validation-for="ActivityDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="ActivityTime">Time:</label>
                    <input asp-for="ActivityTime" class="form-control">
                    <span asp-validation-for="ActivityTime" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label for="Duration">Duration:</label>
                        <input asp-for="Duration" class="form-control">
                    </div>
                    <div class="col-6">
                        <label for="DurationUnit"> </label>
                        <select class="form-control" asp-for="DurationUnit">
                            <option value="Minutes">Minutes</option>
                            <option value="Hours">Hours</option>
                            <option value="Days">Days</option>
                        </select>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Description">Description: </label>
            <textarea rows="6" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input type="submit" value="Create" class="btn btn-warning">
    </form>
</div>